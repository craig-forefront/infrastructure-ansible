[Unit]
Description=ZooKeeper Service
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
User={{ zookeeper_user }}
Group={{ zookeeper_group }}
ExecStart={{ zookeeper_base_dir }}/bin/zkServer.sh start {{ zookeeper_conf_dir }}/conf/zookeeper.conf
ExecStop={{ zookeeper_base_dir }}/bin/zkServer.sh stop {{ zookeeper_conf_dir }}/conf/zookeeper.conf
ExecReload={{ zookeeper_base_dir }}/bin/zkServer.sh restart {{ zookeeper_conf_dir }}/conf/zookeeper.conf
WorkingDirectory={{ zookeeper_working_dir }}

[Install]
WantedBy=default.target